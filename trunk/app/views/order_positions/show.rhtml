<p>
  <b>Material:</b> <%=h @order_position.material.name %>
</p>
<% for column in OrderPosition.content_columns %>
  <% if !['created_by'].include? column.name %>
    <p>
      <b><%= column.human_name %>:</b> <%=h @order_position.send(column.name) %>
    </p>
  <% end %>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @order_position %> |
<%= link_to 'Back', :action => 'show', :controller => 'orders', :id => @order %>
