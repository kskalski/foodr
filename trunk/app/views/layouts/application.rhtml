<html>
<head>
  <title>Foodr: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'table' %>  
</head>
<body>

<div id = 'header'>
  <h1>Foodr</h1>
  <div id = 'user'>
    <% if logged_in? %>
        <%= current_user.login %> | <%= link_to 'Log out', :action => 'logout', :controller => 'account' %> 
    <% else %>
        <%= link_to 'Log in', :action => 'login', :controller => 'account' %> 
    <% end %>
  </div>
</div>  

<p style="color: green"><%= flash[:notice] %></p>


<div id = 'menu'>
  <ul>
    <li><%= link_to 'Orders', :action => 'list', :controller => 'orders' %> </li>
    <li><%= link_to 'Suppliers', :action => 'list', :controller => 'suppliers' %> </li>
    <% if logged_in? %>
      <li><%= link_to 'Finance', :action => 'finance', :controller => 'account' %> </li>
    <% end %>
  </ul>
</div>


<div id = 'content'>
<%= yield  %>
</div>

</body>
</html>
